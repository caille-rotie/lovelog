<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://www.jboss.org/dtd/hibernate/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
         
        <property name="hibernate.hbm2ddl.auto">update</property>
         
        <mapping class="fr.rotie.caille.lovelog.model.LogMessage"/>
        <mapping class="fr.rotie.caille.lovelog.model.emesene.EmeseneLogMessage"/>
        <mapping class="fr.rotie.caille.lovelog.model.empathy.EmpathyLogMessage"/>
        <mapping class="fr.rotie.caille.lovelog.model.FileDay"/>
        <mapping class="fr.rotie.caille.lovelog.model.LogFile"/>
    </session-factory>
</hibernate-configuration>